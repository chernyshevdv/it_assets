<center><h1>Мои заказы</h1></center>
<table class="table table-condensed">
	<thead>
		<th>№</th>
		<th>Название</th>
		<th>Статус</th>
		<th>Менеджер</th>
	</thead>	
	<% @user.order_customers.each do |order| %>
	<tr>
		<td><%= link_to "#{order.id}", order %></td>
		<td><%= link_to "#{order.title}", order %></td>
		<td><%= order.status %></td>
		<td><%= order.manager.name %></td>
	</tr>
	<% end %>
</table>
<center><h1>Мои подразделения</h1></center>
<table class="table table-condensed">
	<thead>
		<th>№</th>
		<th>Название</th>
		<th>Обеспеченность активами</th>
	</thead>
	<%= render @user.subordinate_departments %>
</table>
<h1>Платежные заявки</h1>
<%= form_tag(payment_request_path) do %>
	<%= label_tag(:id, "Номер заявки:") %>
	<%= text_field_tag(:id) %>
	<%= submit_tag("Поиск") %>
<% end %>
