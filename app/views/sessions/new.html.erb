<% provide( :title, 'Sign in') %>
<html>
	<head><title><%= yield(:title) %></title></head>
	<body>
		<%= form_for(:session, url: sessions_path) do |f| %>
			<%= f.label :login %>
			<%= f.text_field :login %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
	</body>
</html>